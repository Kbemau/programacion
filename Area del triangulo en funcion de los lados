#include "stdafx.h"
#include "math.h"
#include <iostream>
#include "conio.h"

using namespace std;

int main()
{
    //Ingresar lados uno por uno
    int lado1, lado2, lado3;
	float S, Area;
	cout<< "Ingrese lado a \n";
	cin>> lado1; 
	cout<< "Ingrese lado b \n";
	cin>> lado2;
	cout<< "ingrese lado c \n";
	cin>> lado3;
	S=(lado1+lado2+lado3)/2;
        Area= sqrt(S*(S-lado1)*(S-lado2)*(S-lado3));
			cout<<Area;
    getch();
    return 0;
}
